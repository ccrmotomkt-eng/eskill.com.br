# AI Optimization System Configuration

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# AI Model Selection
AI_DEFAULT_MODEL=gpt-4o
# Options: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo

# AI Parameters
AI_TEMPERATURE=0.7
# Lower = more deterministic (0.0 - 1.0)

AI_MAX_TOKENS=4000
# Maximum tokens per AI response

# AI Cache
AI_CACHE_ENABLED=true
# Enable caching of AI responses to reduce costs

AI_CACHE_TTL=3600
# Cache duration in seconds (1 hour default)

# Rate Limitingapi
AI_RATE_LIMIT_ENABLED=true
AI_MAX_REQUESTS_PER_MINUTE=60

# Cost Monitoring
AI_MONTHLY_BUDGET=500.00
# Maximum monthly AI cost in USD

AI_ALERT_THRESHOLD=400.00
# Send alert when reaching this amount

# Feature Flags
AI_TITLE_OPTIMIZATION=true
AI_DESCRIPTION_OPTIMIZATION=true
AI_ATTRIBUTE_OPTIMIZATION=true
AI_IMAGE_OPTIMIZATION=false
# Image optimization coming in Phase 4

# Batch Processing
AI_BATCH_MAX_SIZE=100
# Maximum items per batch

AI_BATCH_DELAY_MS=500
# Delay between batch items (rate limiting)

# Fallback Models (if primary fails)
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MODEL=gpt-3.5-turbo

# Multi-Model AI Support
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
AI_PREFERRED_PROVIDER=openai
# Options: openai, claude

# Provider Selection Strategy
AI_PROVIDER_STRATEGY=cost
# Options: cost, speed, quality

# Competitive Analysis
AI_COMPETITOR_LIMIT=10
AI_ENABLE_PRICE_ANALYSIS=true

# Keyword Research
AI_KEYWORD_RESEARCH_ENABLED=true
AI_MAX_KEYWORDS=20

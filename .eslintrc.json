{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Chart": "readonly",
    "bootstrap": "readonly",
    "Swal": "readonly",
    "axios": "readonly",
    "moment": "readonly",
    "DataTable": "readonly",
    "flatpickr": "readonly",
    "Sortable": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "no-debugger": "error",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "curly": ["error", "all"],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-alert": "warn",
    "prefer-const": "warn",
    "no-var": "warn",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "max-len": ["warn", { "code": 120, "ignoreUrls": true, "ignoreStrings": true }]
  },
  "ignorePatterns": [
    "vendor/**",
    "node_modules/**",
    "public/assets/vendor/**",
    "*.min.js",
    "playwright-report/**",
    "test-results/**"
  ]
}

# Auth Failure Monitor Configuration
# Copy this to your .env file or create a separate config

# Environment
APP_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=meli
DB_USER=root
DB_PASS=

# Authentication Monitoring Thresholds
AUTH_BLOCK_THRESHOLD=10                    # Number of failures to trigger IP block
AUTH_FAILURE_ALERT_THRESHOLD=50            # Total failures to trigger email alert
AUTH_BLOCK_DURATION=3600                   # Block duration in seconds (1 hour)
AUTH_TIME_WINDOW=3600                      # Time window to analyze logs (1 hour)
AUTH_IP_WHITELIST=127.0.0.1,::1           # Comma-separated list of IPs to never block

# Email Configuration (for alerts)
ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=tls                           # 'tls' or 'ssl'

# ================================
# CONFIGURAÇÃO DE PRODUÇÃO SEGURA
# ================================
# IMPORTANTE: Copie este arquivo para .env e configure todas as variáveis

# ================================
# AMBIENTE E APLICAÇÃO
# ================================
APP_ENV=production
APP_DEBUG=false
APP_NAME="Mercado Livre Manager"
APP_VERSION="1.2.0"

# GERE UMA CHAVE FORTE DE 64 CARACTERES
# Comando: openssl rand -hex 32
APP_KEY=CHANGE_THIS_64_CHARACTER_SECURE_KEY_HERE_USE_OPENSSL_RAND_HEX_32

# URL COMPLETA DA APLICAÇÃO (OBRIGATÓRIO HTTPS EM PRODUÇÃO)
APP_URL=https://seudominio.com

# URL BASE (se a aplicação não estiver na raiz do domínio)
BASE_URL=/

# ================================
# BANCO DE DADOS DE PRODUÇÃO
# ================================
# NUNCA USE ROOT EM PRODUÇÃO!
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mercadolivre_prod
DB_USER=ml_user
DB_PASS=SENHA_FORTE_AQUI_MIN_16_CARACTERES

# ================================
# MERCADO LIVRE API - PRODUÇÃO
# ================================
# Credenciais de PRODUÇÃO do Mercado Livre
ML_APP_ID=your_production_client_id
ML_CLIENT_ID=your_production_client_id
ML_CLIENT_SECRET=your_production_client_secret
ML_REDIRECT_URI=https://seudominio.com/dashboard

# Ambiente ML (production ou sandbox)
ML_ENVIRONMENT=production

# ================================
# SEGURANÇA E SESSÃO
# ================================
# Configurações de sessão seguras (HTTPS obrigatório)
SESSION_LIFETIME=7200
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# Segurança CSRF
CSRF_ENABLED=true

# ================================
# CACHE AVANÇADO
# ================================
# Redis recomendado para produção
CACHE_DRIVER=redis
CACHE_TTL=7200
CACHE_PREFIX=ml_app_

# Configurações Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# E-MAIL DE PRODUÇÃO
# ================================
EMAIL_ENABLED=true
EMAIL_DRIVER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-de-app
EMAIL_ENCRYPTION=tls
EMAIL_FROM=noreply@seudominio.com
EMAIL_REPLY_TO=support@seudominio.com

# ================================
# LOGS E MONITORAMENTO
# ================================
LOG_LEVEL=warning
LOG_FILE=storage/logs/production.log
LOG_MAX_FILES=30
LOG_ROTATE_SIZE=10MB

# Logs estruturados
LOG_FORMAT=json
LOG_CONTEXT=true

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_IP_WHITELIST=

# ================================
# BACKUP AUTOMATIZADO
# ================================
BACKUP_ENABLED=true
BACKUP_PATH=/backup/mercadolivre
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_TIME=02:00

# ================================
# ALERTAS E NOTIFICAÇÕES
# ================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

SLACK_ENABLED=false
SLACK_WEBHOOK=

# ================================
# PERFORMANCE
# ================================
# Compressão de resposta
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# Assets
ASSETS_MINIFY=true
ASSETS_VERSION=1.2.0

# ================================
# SSL E HTTPS
# ================================
# Forçar HTTPS em produção
FORCE_HTTPS=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ================================
# DESENVOLVIMENTO (DESABILITADO EM PROD)
# ================================
# Mantido apenas para referência
DEV_MODE=false
DEV_TOOLBAR=false
DEV_PROFILER=false


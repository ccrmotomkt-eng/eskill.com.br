{
    "name": "eskill/seo-optimizer",
    "description": "Advanced SEO optimization system for Mercado Livre",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "SEO Team",
            "email": "seo@eskill.com.br"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "dompdf/dompdf": "^3.1",
        "phpmailer/phpmailer": "^7.0",
        "monolog/monolog": "^3.10",
        "vlucas/phpdotenv": "^5.6",
        "minishlink/web-push": "^10.0",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "geoip2/geoip2": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "fakerphp/faker": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helpers/LogHelper.php",
            "app/Helpers/CacheHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=Unit",
        "test-integration": "phpunit --testsuite=Integration"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    }
}
